# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/artisan-ai
DB_NAME=artisan-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
# Option 1: Use service account key file (for local development)
GOOGLE_CLOUD_KEY_FILE=path/to/your/service-account-key.json
# Option 2: Use JSON credentials (recommended for production/Docker)
# GOOGLE_CLOUD_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# Speech-to-Text Configuration
GOOGLE_SPEECH_API_ENDPOINT=https://speech.googleapis.com
MAX_AUDIO_FILE_SIZE=52428800
# Maximum audio duration in seconds
MAX_AUDIO_DURATION=600

# Translation Configuration
GOOGLE_TRANSLATE_API_ENDPOINT=https://translation.googleapis.com
# Maximum text length for translation
MAX_TEXT_LENGTH=30000
# Translation quota per user per day
DAILY_TRANSLATION_QUOTA=100000

# File Storage Configuration
# For audio file storage (optional - can use local storage for development)
AUDIO_STORAGE_BUCKET=your-gcs-bucket-name
AUDIO_STORAGE_PATH=audio-files/
# Maximum storage per user (in bytes)
MAX_USER_STORAGE=1073741824

# Rate Limiting Configuration
# Speech-to-text requests per hour per user
SPEECH_RATE_LIMIT=20
# Translation requests per hour per user  
TRANSLATION_RATE_LIMIT=100
# Story save requests per hour per user
STORY_SAVE_RATE_LIMIT=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/artisan-ai.log

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for caching and sessions - optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_SPEECH_TO_TEXT=true
ENABLE_TRANSLATION=true
ENABLE_PUBLIC_STORIES=true
ENABLE_STORY_SHARING=true
ENABLE_ANALYTICS=false

# Development Tools
ENABLE_API_DOCS=true
ENABLE_DEBUG_LOGGING=true
CORS_ORIGIN=http://localhost:3000