{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language and Module Settings */
    "target": "ES2020",                  
    "module": "commonjs",               
    "moduleResolution": "node",        
    "esModuleInterop": true,            
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,         
    "types": ["node"],                  

    /* Output Settings */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
